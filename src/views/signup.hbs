<section class="login p-fixed d-flex text-center bg-primary common-img-bg">
    <!-- Container-fluid starts -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <!-- Authentication card start -->
                <div class="signup-card card-block auth-body mr-auto ml-auto">
                    <form class="md-float-material needs-validation" action="/auth/signup" method="POST" novalidate>
                        <div class="text-center">
                            <img src="/assets/images/auth/logo-dark.png" alt="logo.png">
                        </div>
                        <div class="auth-box">
                            <div class="row m-b-20">
                                <div class="col-md-12">
                                    <h3 class="text-center txt-primary">Sign up</h3>
                                </div>
                            </div>
                            <hr />
                            <div class="form-group">
                                <input type="text" class="form-control" name="fullName"
                                    placeholder="Enter your full-name..." required>
                                <div class="invalid-feedback">
                                    Please enter your name here
                                </div>
                                <span class="md-line"></span>
                            </div>
                            <div class="form-group">
                                {{#if notify.errAcc}}
                                <input type="text" class="form-control is-invalid" name="username" id="validationCustomUsername"
                                    aria-describedby="inputGroupPrepend" placeholder="Choose Username" required>
                                <div class="invalid-feedback">
                                    {{notify.errAcc}}
                                </div>

                                {{else}}
                                {{!-- <input type="text" class="form-control" name="username"
                                    id="validationCustomUsername" aria-describedby="inputGroupPrepend"
                                    placeholder="Choose Username" required>
                                <div class="invalid-feedback">
                                    Please enter your username here
                                </div> --}}

                                <input type="text" class="form-control" name="username" placeholder="Choose Username"
                                    required>
                                <div class="invalid-feedback">
                                    Please enter your username here
                                </div>
                                {{/if}}
                                <span class="md-line"></span>
                            </div>
                            <div class="form-group">

                                {{#if notify.errEmail}}
                                <input type="email" class="form-control is-invalid" name="email" placeholder="Your Email Address"
                                    required>
                                <div class="invalid-feedback">
                                    {{notify.errEmail}}
                                </div>
                                {{else}}
                                <input type="email" class="form-control" name="email" placeholder="Your Email Address"
                                    required>
                                <div class="invalid-feedback">
                                    Please enter your email address here
                                </div>
                                {{/if}}
                                <span class="md-line"></span>

                            </div>
                            <div class="form-group">
                                {{#if notify.errPwd}}
                                <input type="password" class="form-control is-invalid" name="password"
                                    placeholder="Choose Password" required>
                                <div class="invalid-feedback">
                                    {{notify.errPwd}}
                                </div>
                                {{else}}
                                <input type="password" class="form-control" name="password"
                                    placeholder="Choose Password" required>
                                <div class="invalid-feedback">
                                    Please choose a new password here
                                </div>
                                {{/if}}
                                <span class="md-line"></span>
                            </div>
                            <div class="row m-t-25 text-left">
                                <div class="col-md-12">
                                    <div class="checkbox-fade fade-in-primary">
                                        <label>
                                            <input type="checkbox" class="form-check-input" value="" required>
                                            <span class="cr"><i
                                                    class="cr-icon icofont icofont-ui-check txt-primary"></i></span>
                                            <label class="text-inverse">I read and accept <a href="#">Terms &amp;
                                                    Conditions.</a></label>
                                            <div class="invalid-feedback">
                                                Please accept our terms and conditions
                                            </div>
                                        </label>

                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="checkbox-fade fade-in-primary">
                                        <label>
                                            <input type="checkbox" value="">
                                            <span class="cr"><i
                                                    class="cr-icon icofont icofont-ui-check txt-primary"></i></span>
                                            <span class="text-inverse">Send me the <a href="#!">Newsletter</a>
                                                weekly.</span>
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="row m-t-30">
                                <div class="col-md-12">
                                    <button type="submit"
                                        class="btn btn-primary btn-md btn-block waves-effect text-center m-b-20">Sign up
                                        now</button>
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-md-10">
                                    <p class="text-inverse text-left m-b-0">Thank you and enjoy our website.</p>
                                    <p class="text-inverse text-left"><b>Aladdin Service</b></p>
                                </div>
                                <div class="col-md-2">
                                    <img src="/assets/images/auth/Logo-small-bottom.png" alt="small-logo.png">
                                </div>
                            </div>
                        </div>
                    </form>
                    <!-- end of form -->
                </div>
                <!-- Authentication card end -->
            </div>
            <!-- end of col-sm-12 -->
        </div>
        <!-- end of row -->
    </div>
    <!-- end of container-fluid -->
</section>