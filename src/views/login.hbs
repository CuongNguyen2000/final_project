<section class="login p-fixed d-flex text-center bg-primary common-img-bg">
    <!-- Container-fluid starts -->
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <!-- Authentication card start -->
                <div class="login-card card-block auth-body mr-auto ml-auto">
                    <form class="md-float-material needs-validation" action="/auth/login" method="POST" novalidate>
                        <div class="text-center">
                            <img src="/assets/images/auth/logo-dark.png" alt="logo.png" />
                        </div>
                        <div class="auth-box">
                            <div class="row m-b-20">
                                <div class="col-md-12">
                                    <h3 class="text-left txt-primary">Sign In</h3>
                                </div>
                            </div>
                            <hr />
                            <div class="form-group">
                                <input type="text" class="form-control" name="username" placeholder="Your Username"
                                    required />
                                <div class="invalid-feedback">
                                    Please enter your username first
                                </div>
                                <span class="md-line"></span>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" name="password" placeholder="Password"
                                    required />
                                <div class="invalid-feedback">
                                    Please enter your password
                                </div>
                                <span class="md-line"></span>
                            </div>

                            {{#if err}}
                            <div class="alert alert-danger" role="alert" style="width: auto;">
                                {{err}}
                            </div>
                            {{/if}}

                            <div class="row m-t-30">
                                <div class="col-md-12">
                                    <button
                                        class="btn btn-primary btn-md btn-block waves-effect text-center m-b-20">Sign
                                        in
                                    </button>
                                    <p class="text-inverse text-left text-center">Or Sign up
                                        <a href="/auth/signup"><b>here</b></a>
                                    </p>
                                </div>

                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-md-10">
                                    <p class="text-inverse text-left m-b-0">Thank you and enjoy
                                        our website.</p>
                                    <p class="text-inverse text-left"><b>Aladdin service</b></p>
                                </div>
                                <div class="col-md-2">
                                    <img src="/assets/images/auth/Logo-small-bottom.png" alt="small-logo.png" />
                                </div>
                            </div>

                        </div>
                    </form>
                    <!-- end of form -->
                </div>
                <!-- Authentication card end -->
            </div>
            <!-- end of col-sm-12 -->
        </div>
        <!-- end of row -->
    </div>
    <!-- end of container-fluid -->
</section>